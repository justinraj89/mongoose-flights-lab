<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/styleshow.css' />
    <title>Document</title>
</head>


<body>
    <ul class="menu">
        <li><a class="buttons" href="/flights/new">New Flight</a></li>
        <li><a class="buttons" href="/flights">All Flights</a></li>
      </ul>
      <h1>Flight Information</h1>
      <div class="container">
      <table class="flight-info">
        <thead>
          <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departsDate %></td>
          </tr>
        </tbody>
      </table> 
    </div>
        <h3>Flight Arrival Information</h3>
    
          <div class="container">
        <% if (flight.destinations.length) { %>
          <table class="flight-info">
            <thead>
              <tr>
                <th>Airport</th>
                <th>Arrival</th>
              </tr>
            </thead>
            <tbody>
              <% flight.destinations.forEach(function(f) { %>
                <tr>
                  <td><%= f.airport %></td>
                  <td><%= f.arrival %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <h5>No Arrival information available</h5>
        <% } %>
      </div>

      <br>
      <h3>Current Tickets</h3>
      <div class="ticket-container">
        <% if (ticket.length) { %>
          <table class="flight-info">
            <thead>
              <tr>
                <th>Seat</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <% ticket.forEach(function(ticket) { %>
                <tr>
                  <td><%= ticket.seat %></td>
                  <td><%= ticket.price %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <h5>No Ticket information available</h5>
        <% } %>
      </div>
      
      <h3>Add New Arrival Information</h3>

        <form id="add-destination-form" method="POST"
        action="/flights/<%= flight._id %>/destinations">
        <label>Airport:</label>
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
        <label>Arrival:</label>
        <input type="datetime-local" name="arrival" value="yyyy-MM-ddThh:mm"
        <!-- min="2022-08-04T00:00" max="2023-03-04T00:00"> -->
        <input type="submit" value="Add Destination">
      </form>
      <br>
      <h2>Buy A Ticket</h2>
      <form action="/flights/<%= flight._id %>/tickets/new">
        <button type="submit">Buy Ticket</button>
     </form>

      <br>

     
        
</body>


</html>



